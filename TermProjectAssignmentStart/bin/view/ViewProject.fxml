<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>

<VBox styleClass="hbox-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ViewProjectController">
    <children>
      <VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: beige;">
         <children>	
        	<Label text="Project: " />
         	<Text fx:id="title" text="Project" />
         	<Label text="Created: " />
			<Text fx:id="date" text="Project" />
			<Label text="Description: " />
			<Text fx:id="description" text="Project" />
			
			<ListView fx:id="ticketList" prefHeight="68.0" prefWidth="600.0" />
            <Button mnemonicParsing="false" onAction="#showComments" text="Show comments" />
            <ListView fx:id="commentList" prefHeight="86.0" prefWidth="600.0" />
            <Button mnemonicParsing="false" onAction="#viewProjectToNewComment" text="Make Comment" />
            <Button mnemonicParsing="false" onAction="#goBack" text="Go back" />
         </children>
      </VBox>
    </children>
</VBox>
