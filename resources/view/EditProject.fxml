<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>

<HBox styleClass="hbox-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.EditProjectController">
    <children>
            <VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: beige;" styleClass="vbox-container">
            <children>
                <Text text="Edit Project">
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets left="225.0" />
               </VBox.margin>
            </Text>
                <Label text="Name">
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
                <TextField fx:id="name" prefHeight="27.0" prefWidth="510.0" promptText="Project Name">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin></TextField>
                
                      <Label text="Date Created">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="13.0" />
               </font></Label>
            <DatePicker fx:id="dateCreated">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </DatePicker>
                
                      <Label text="Description">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="13.0" />
               </font></Label>
               <TextArea fx:id="description" prefHeight="141.0" prefWidth="574.0" promptText="Description">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin></TextArea>
               
               <Button onAction="#editProject" text="Edit">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin></Button>
            </children>
        </VBox>
    </children>
</HBox>
