import java.io.IOException;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.control.Hyperlink;
import javafx.scene.layout.HBox;

public class MainController {

    @FXML
    private Hyperlink hyperlink;

    @FXML
    private void handleLinkClick(ActionEvent event) {
        // Handle the hyperlink click event here
        String relativeLink = "view/NewProject.fxml"; // Set your relative link here

        // Load the new FXML content based on the relative link
        FXMLLoader loader = new FXMLLoader(getClass().getResource(relativeLink));
        try {
            Parent newContent = loader.load();
            // Replace the current content with the new content
            // For example, assuming you have a StackPane as your root:
            HBox root = (HBox) hyperlink.getScene().getRoot();
            root.getChildren().clear();
            root.getChildren().add(newContent);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
