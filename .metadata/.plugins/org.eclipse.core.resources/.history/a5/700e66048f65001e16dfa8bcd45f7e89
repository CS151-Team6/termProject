package application.controller;
import java.io.IOException;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.control.Hyperlink;
import javafx.scene.layout.HBox;

public class MainController {

    @FXML
    private Hyperlink hyperlink;

    @FXML
    private void handleLinkClick(ActionEvent event) {
        String link = "Page2.fxml"; // Set your relative link here

        // Load the new FXML content based on the relative link
        FXMLLoader loader = new FXMLLoader(getClass().getResource(link));
        try {
            HBox root = (HBox) hyperlink.getScene().getRoot();
            root.getChildren().clear();
            root.getChildren().add(newContent);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}