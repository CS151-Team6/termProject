<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DatePicker?>

<VBox styleClass="hbox-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CreateTicketController">
    <children>
      <VBox prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: beige;">
         <children>
             <Text text="New Ticket" textAlignment="CENTER" wrappingWidth="598.9375">
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="22.0" />
               </font>
            </Text>


             <ListView fx:id="projectList" prefHeight="90.0" prefWidth="600.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></ListView>
            <Text text="Name" wrappingWidth="42.9375">
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </Text>
             <TextField fx:id="name" promptText="Project Name">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></TextField>
            <Text text="Description" wrappingWidth="87.9375">
               <font>
                  <Font name="Adelle Sans Devanagari Heavy" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </Text>
             <TextArea fx:id="description" prefHeight="117.0" prefWidth="590.0" promptText="Description">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></TextArea>
			 <Button onAction="#createTicket" text="Create Ticket">
               <VBox.margin>
                  <Insets left="5.0" top="10.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
    </children>
</VBox>
